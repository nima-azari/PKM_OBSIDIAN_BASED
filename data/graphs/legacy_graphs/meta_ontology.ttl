:DataGovernance a owl:Class ;
    rdfs:label "Data Governance" ;
    rdfs:comment "The management of data availability, usability, integrity, and security." .

:DataInteroperability a owl:Class ;
    rdfs:label "Data Interoperability" ;
    rdfs:comment "The ability of different systems to work together and exchange data effectively." .

:DataPortability a owl:Class ;
    rdfs:label "Data Portability" ;
    rdfs:comment "The ability to transfer data from one service provider to another." .

:KnowledgeGraph a owl:Class ;
    rdfs:label "Knowledge Graph" ;
    rdfs:comment "A structured representation of knowledge that integrates information from diverse sources." .

:SemanticWeb a owl:Class ;
    rdfs:label "Semantic Web" ;
    rdfs:comment "An extension of the World Wide Web that enables data to be shared and reused across applications." .

:VendorLockIn a owl:Class ;
    rdfs:label "Vendor Lock-in" ;
